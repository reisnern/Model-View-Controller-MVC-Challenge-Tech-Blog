<!-- render post -->
{{> post}}

<!-- render comments -->
{{> comment}}

<!-- create comment -->
{{#if logged_in}}
<div class="col">
  <div class="card m-2">
    <div class="card-header comment-bg">
      <div class ="action-txt">Add Comment</div>
    </div>
    <div class="card-body body-bg">
      <form class="form comment-form">
        <div class="form-group mb-3">
          <label for="create-comment" class="form-label">Comment</label>
          <textarea class="form-control" id="create-comment" rows="5"></textarea>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-bg btn-txt" type="submit" id="comment-btn">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/create-comment.js"></script>
{{/if}}