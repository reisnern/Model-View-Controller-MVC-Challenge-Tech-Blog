<!-- sign-up -->
<div class="col">
  <div class="card m-2">
    <div class="card-header post-bg">
      <div class="action-txt">Sign Up</div>
    </div>
    <div class="card-body body-bg">
      <form class="form sign-up-form">
        <div class="form-group mb-3">
          <label for="username-sign-up" class="form-label">Username</label>
          <input class="form-control" type="text" id="username-sign-up"></input>
        </div>
        <div class="form-group mb-3">
          <label for="password-sign-up" class="form-label">Password</label>
          <input class="form-control" type="password" id="password-sign-up"></input>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-bg btn-txt" type="submit" id="sign-up-btn">Sign Up</button>
        </div>
      </form>
      <div>
        <a href="/login">Login Instead</a>
      </div>
    </div>
  </div>
</div>

<script src="/js/sign-up.js"></script>