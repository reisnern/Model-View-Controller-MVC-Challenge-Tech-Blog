<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Tech Blog</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <div class="flex-column justify-space-around">
    
    <!-- header -->
    <header class="display-flex justify-space-between align-center p-2">
      <!-- navigation -->
      <nav>
        <!-- render links for all -->
        <a href="/">Home</a>
        <a href="/dashboard">Dashboard</a>
         
        <!-- render links based on whether user is logged in or not -->
        {{#if logged_in}}
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>

      
    </header>

    <!-- main -->
    <main class="container container-fluid mt-5">
      <!-- render sub layout -->
      {{{ body }}}
    </main>

  </div>

  <!-- if the user is logged in, render logout script -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  
</body>
</html>