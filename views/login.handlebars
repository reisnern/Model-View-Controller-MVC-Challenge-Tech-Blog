<!-- login -->
<div class="col">
  <div class="card m-2">
    <div class="card-header post-bg">
      <div class="action-txt">Login</div>
    </div>
    <div class="card-body body-bg">
      <form class="form login-form">
        <div class="form-group mb-3">
          <label for="username-login" class="form-label">Username</label>
          <input class="form-control" type="text" id="username-login"></input>
        </div>
        <div class="form-group mb-3">
          <label for="password-login" class="form-label">Password</label>
          <input class="form-control" type="password" id="password-login"></input>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-bg btn-txt" type="submit" id="login-btn">Login</button>
        </div>
      </form>
      <div>
        <a href="/signup">Sign Up Instead</a>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>